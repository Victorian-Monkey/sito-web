---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Primary colors - Rosso Victorian Monkey */
    --aw-color-primary: #AF1D23;
    --aw-color-primary-50: #fef2f2;
    --aw-color-primary-100: #fee2e2;
    --aw-color-primary-200: #fecaca;
    --aw-color-primary-300: #fca5a5;
    --aw-color-primary-400: #f87171;
    --aw-color-primary-500: #AF1D23;
    --aw-color-primary-600: #dc2626;
    --aw-color-primary-700: #b91c1c;
    --aw-color-primary-800: #991b1b;
    --aw-color-primary-900: #7f1d1d;

    /* Secondary colors - Nero/Grigio */
    --aw-color-secondary: #1E1E1E;
    --aw-color-secondary-50: #f8f8f8;
    --aw-color-secondary-100: #f0f0f0;
    --aw-color-secondary-200: #e4e4e4;
    --aw-color-secondary-300: #d1d1d1;
    --aw-color-secondary-400: #b4b4b4;
    --aw-color-secondary-500: #9a9a9a;
    --aw-color-secondary-600: #818181;
    --aw-color-secondary-700: #6a6a6a;
    --aw-color-secondary-800: #5a5a5a;
    --aw-color-secondary-900: #1E1E1E;

    /* Accent color */
    --aw-color-accent: #AF1D23;

    /* Text colors */
    --aw-color-text-heading: #1E1E1E;
    --aw-color-text-default: #1E1E1E;
    --aw-color-text-muted: #6B7280;

    /* Background colors */
    --aw-color-bg-page: #FFFFFF;
    --aw-color-bg-page-dark: #1E1E1E;

    ::selection {
      background-color: #fecaca;
      color: #AF1D23;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Colors remain the same in dark mode */
    --aw-color-primary: #AF1D23;
    --aw-color-secondary: #1E1E1E;
    --aw-color-accent: #AF1D23;

    /* Text colors for dark mode */
    --aw-color-text-heading: #FFFFFF;
    --aw-color-text-default: #FFFFFF;
    --aw-color-text-muted: #9CA3AF;

    /* Background for dark mode */
    --aw-color-bg-page: #1E1E1E;

    ::selection {
      background-color: #7f1d1d;
      color: #fee2e2;
    }
  }
</style>
