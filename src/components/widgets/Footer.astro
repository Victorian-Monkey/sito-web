---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';
import WebsiteCarbon from './WebsiteCarbon.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 py-8">
    
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      
      <!-- Brand Section -->
      <div class="md:col-span-1">
        <div class="mb-4">
          <a class="inline-block font-bold text-xl" href={getHomePermalink()}>ðŸŽ© {SITE?.name}</a>
        </div>
        <p class="text-sm text-muted dark:text-gray-400">
          La Tana dei Nerd di Roma<br>
          Dal 2015, giochi, drink e risate
        </p>
      </div>

      <!-- Contact Section -->
      {links.map(({ title, links }) => (
        <div class="md:col-span-1">
          <div class="dark:text-gray-300 font-medium mb-4">{title}</div>
          {links && Array.isArray(links) && links.length > 0 && (
            <ul class="text-sm space-y-2">
              {links.map(({ text, href, ariaLabel }) => (
                <li>
                  <a
                    class="text-muted hover:text-gray-700 hover:underline dark:text-gray-400 transition duration-150 ease-in-out"
                    href={href}
                    aria-label={ariaLabel}
                  >
                    <Fragment set:html={text} />
                  </a>
                </li>
              ))}
            </ul>
          )}
        </div>
      ))}

      <!-- Social Section -->
      <div class="md:col-span-1">
        <div class="dark:text-gray-300 font-medium mb-4">Seguici</div>
        {socialLinks?.length ? (
          <ul class="flex gap-4">
            {socialLinks.map(({ ariaLabel, href, icon }) => (
              <li>
                <a
                  class="text-muted dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition duration-150 ease-in-out"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-6 h-6" />}
                </a>
              </li>
            ))}
          </ul>
        ) : ''}
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        
        <!-- Legal Links -->
        <div class="text-sm text-muted flex gap-4">
          {secondaryLinks.map(({ text, href }) => (
            <a
              class="text-muted hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
              href={href}
              set:html={text}
            />
          ))}
        </div>
        <WebsiteCarbon />

        <!-- Copyright -->
        <div class="text-sm text-muted dark:text-gray-400">
          <Fragment set:html={footNote} />
        </div>
      </div>
    </div>
  </div>
</footer>
