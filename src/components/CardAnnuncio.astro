---
export interface Props {
  annuncio: {
    id: string;
    title: string;
    excerpt: string;
    date: string;
    dateEnd: string;
    category: string;
    priority: string;
    featured?: boolean;
  };
  categoryInfo?: {
    id: string;
    name: string;
    color: string;
  };
  showFullContent?: boolean;
  className?: string;
}

const { annuncio, categoryInfo, showFullContent = false, className = "" } = Astro.props;

// Helper function to get category color classes
const getCategoryColorClasses = (color: string) => {
  const colorMap: Record<string, string> = {
    purple: 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
    blue: 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
    green: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  };
  return colorMap[color] || 'bg-gray-100 text-gray-800 dark:bg-secondary/20 dark:text-gray-200';
};

// Helper function to format date
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('it-IT', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};
---

<div class={`bg-white dark:bg-secondary rounded-lg shadow-lg p-6 ${className}`} data-category={annuncio.category}>
  <div class="flex items-center justify-between mb-3">
    <span class={`px-3 py-1 rounded-full text-sm font-medium ${getCategoryColorClasses(categoryInfo?.color || 'gray')}`}>
      {categoryInfo?.name || 'Categoria'}
    </span>
    <span class="text-sm text-gray-500 dark:text-white/70">
      {formatDate(annuncio.date)}
    </span>
  </div>
  
  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
    {annuncio.title}
  </h3>
  
  <p class="text-gray-600 dark:text-white/80 mb-4">
    {annuncio.excerpt}
  </p>
  
  {annuncio.priority === 'high' && (
    <div class="mb-3">
      <span class="px-2 py-1 bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 rounded-full text-xs font-medium">
        IMPORTANTE
      </span>
    </div>
  )}
  
  <div class="flex items-center justify-between">
    <div class="text-sm text-gray-500 dark:text-white/70">
      Scade: {formatDate(annuncio.dateEnd)}
    </div>
    
    <a
      href={`/comunicazioni/${annuncio.id}`}
      class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition-colors duration-200"
    >
      Leggi tutto
      <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</div>
