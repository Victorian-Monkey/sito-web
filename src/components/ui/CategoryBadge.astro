---
export interface Props {
  color: string;
  className?: string;
}

const { color, className = '' } = Astro.props;

const getCategoryColorClasses = (color: string) => {
  const colorMap: Record<string, string> = {
    purple: 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
    blue: 'bg-primary/20 text-primary dark:bg-primary/30 dark:text-primary',
    green: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
    red: 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200',
    orange: 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200',
    yellow: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
  };
  return colorMap[color] || 'bg-gray-100 text-gray-800 dark:bg-secondary/20 dark:text-gray-200';
};
---

<span class={`px-3 py-1 rounded-full text-sm font-medium ${getCategoryColorClasses(color)} ${className}`}>
  <slot />
</span>
