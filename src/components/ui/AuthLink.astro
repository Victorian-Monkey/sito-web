---
export interface Props {
  href: string;
  text: string;
  classes?: string;
}

const { href, text, classes = '' } = Astro.props;
---

<div class={`text-center mt-6 ${classes}`}>
  <p class="text-gray-600 dark:text-gray-300 mb-4">
    {text}
  </p>
  <a 
    href={href} 
    class="text-primary hover:text-primary/80 font-medium transition-colors"
  >
    {text.includes('account') ? 'Registrati qui' : 'Accedi qui'}
  </a>
</div>
