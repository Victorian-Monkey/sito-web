---
export interface Props {
  text?: string;
  classes?: string;
}

const { text = 'oppure', classes = '' } = Astro.props;
---

<div class={`flex items-center my-8 ${classes}`}>
  <div class="flex-1 border-t border-gray-300 dark:border-gray-600"></div>
  <span class="px-4 text-gray-500 dark:text-gray-400 text-sm">{text}</span>
  <div class="flex-1 border-t border-gray-300 dark:border-gray-600"></div>
</div>
