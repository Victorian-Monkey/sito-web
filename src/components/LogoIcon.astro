---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-8 h-8', 
  lg: 'w-12 h-12',
  xl: 'w-16 h-16'
};
---

<img 
  src="/src/assets/images/monkey-logo.svg" 
  alt="Victorian Monkey Logo" 
  class={`${sizeClasses[size]} ${className}`}
/>
